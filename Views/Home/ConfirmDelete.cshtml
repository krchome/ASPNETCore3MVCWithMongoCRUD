@model MongoDb.ASP.NETCore3CRUDSample.DataAccess.Models.Customer

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h1>ConfirmDelete</h1>

<h3>Are you sure you want to delete this?</h3>

    <h4>Customer</h4>
    <hr />
    
       
    
    
    <form asp-action="Delete" asp-controller="Home" method="post">
        <input type="hidden" name="Id"
               value="@Model.Id.ToString()" />
        <table border="1" cellpadding="10">
            <tr>
                <td><label asp-for="CustomerID" class=""></label></td>
                <td>@Model.CustomerID</td>
            </tr>
            <tr>
                <td><label asp-for="Name" class=""></label></td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td><label asp-for="Age" class=""></label></td>
                <td>@Model.Age</td>
            </tr>
            <tr>
                <td><label asp-for="Salary" class=""></label></td>
                <td>@Model.Salary</td>
            </tr>
        </table>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

